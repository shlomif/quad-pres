<pre><span class="synPreProc">#!/usr/bin/perl</span>

<span class="synStatement">use strict</span>;
<span class="synStatement">use warnings</span>;

<span class="synStatement">use </span>Add2 (<span class="synConstant">qw(add)</span>);

<span class="synStatement">if</span> (!(add(<span class="synConstant">2</span>,<span class="synConstant">2</span>) == <span class="synConstant">4</span>))
{
    <span class="synStatement">die</span> <span class="synConstant">&quot;add(2,2) failed&quot;</span>;
}

{
    <span class="synStatement">my</span> <span class="synIdentifier">$result</span> = add(<span class="synConstant">1</span>,<span class="synConstant">1</span>);

    <span class="synStatement">if</span> (<span class="synIdentifier">$result</span> != <span class="synConstant">2</span>)
    {
        <span class="synStatement">die</span> <span class="synConstant">&quot;add(1,1) resulted in '</span><span class="synIdentifier">$result</span><span class="synConstant">' instead of 2.&quot;</span>
    }
}

<span class="synStatement">exit</span>(<span class="synConstant">0</span>);
